<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.openld.senior">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Senior">

        <!-- 主页 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- UI部分主页 -->
        <activity
            android:name=".uisection.main.UIMainActivity"
            android:exported="false"
            android:label="UI部分主页"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" /> <!-- 测试RecyclerView -->
        <activity
            android:name=".uisection.testrecyclerview.TestRecyclerViewActivity"
            android:exported="false"
            android:label="测试RecyclerView"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
    </application>

</manifest>